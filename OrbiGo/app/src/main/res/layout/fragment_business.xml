<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BusinessFragment"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="29.8sp"
            android:layout_weight="9"
            android:textStyle="bold"
            android:textColor="#000000"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-7.5sp"
            android:text="Business"
            />
        <TextView
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="29.8sp"
            android:id="@+id/businessCount"
            android:textColor="#8e6ef9"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-7.5sp"
            android:text="0"
            />

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#b7b7b7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/businessListRV" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List New Business"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/newBusinessBtn"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>
</LinearLayout>