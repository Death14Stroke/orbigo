<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    sothree:umanoPanelHeight="215dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView2"
    sothree:umanoOverlay="true"
    tools:context=".activities.PoiDetailsActivity"
    sothree:umanoScrollableView="@+id/list2">

    <!--MAIN CONTENT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:weightSum="10"
        android:background="#000"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="215dp"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id="@+id/image_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.design.widget.TabLayout
                android:id="@+id/image_indicator"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/indicator_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--SLIDING LAYOUT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:background="#000"
        android:focusable="true"
        android:id="@+id/dragView2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/arrow_image2"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_up"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:textAllCaps="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:padding="5dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/poi_detail_name"
                android:text="China town"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:id="@+id/poi_details_cost"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="$40 per person"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="5dp"
                android:id="@+id/poi_detail_area"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_local"
                android:text="Wollondilly"
                android:textColor="#b7b7b7"/>
            <TextView
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/ic_local"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="5dp"
                android:id="@+id/poi_detail_time"
                android:layout_weight="1"
                android:text="2 hours total"
                android:textColor="#b7b7b7"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b7b7b7"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/poi_detail_desc"
                    android:layout_marginStart="10dp"
                    android:text="Astonishing place to visit with family, you will
enjoy the chiness culture that affect the place,
consider trying chiness food in Chow restaurant."
                    android:layout_marginBottom="5dp"
                    android:textColor="#b7b7b7"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b7b7b7"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eat"
                        android:padding="10dp"
                        android:id="@+id/poi_detail_cat"
                        android:textSize="15sp"
                        android:textColor="#b7b7b7"
                        android:drawableStart="@drawable/eat_ic"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:padding="10dp"
                    android:id="@+id/poi_detail_address"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="#b7b7b7"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_www"
                    android:text="https://stackoverflow.com/questions/4275678/how-to-make-a-phone-call-using-intent-in-android"
                    style="?borderlessButtonStyle"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:id="@+id/poi_url"
                    android:textColor="#8282f9"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+919876543210"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:id="@+id/poi_call"
                    style="?borderlessButtonStyle"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:drawableStart="@android:drawable/sym_action_call"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>