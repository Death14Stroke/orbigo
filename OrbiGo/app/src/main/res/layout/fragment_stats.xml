<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/home_ll"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.orbigo.activities.HomeTouristActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:src="@mipmap/ic_launcher_round"
        android:visibility="gone"

        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"

        android:indeterminate="true"
        android:visibility="visible" />





    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context="com.orbigo.fragments.StatsFragment"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:lineSpacingExtra="-7.5sp"
                android:layout_marginStart="20dp"
                android:text="Stats" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#b7b7b7" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/business_listed"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#8e6ef9"
                android:text="0 "

                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:textColor="#959595"
                android:text="business listed" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#b7b7b7" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#8e6ef9"
                android:text="0.0"
                android:id="@+id/earnLast" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="16sp"
                    android:layout_weight="7"
                    android:textColor="#959595"
                    android:text="earning last 30 days" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/view_history_btn"
                    android:text="View history"
                    android:textColor="#02b8d0"
                    android:textAllCaps="false"
                    style="?attr/borderlessButtonStyle" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textColor="#8e6ef9"
                        android:text="0"
                        android:id="@+id/visitLast" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp"
                        android:textColor="#959595"
                        android:text="visit last 30 days"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="#b7b7b7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textColor="#8e6ef9"
                        android:text="0"
                        android:id="@+id/bookingLast" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:textColor="#959595"
                        android:text="booking last 30 days"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/right2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"

                    style="?attr/borderlessButtonStyle"
                    android:src="@drawable/ic_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activeCampaign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:textColor="#8e6ef9"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#959595"
                        android:layout_marginStart="20dp"
                        android:text="active campaign"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="#b7b7b7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/campaignLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:textColor="#8e6ef9"
                        android:text="0" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#959595"
                        android:layout_marginStart="5dp"
                        android:text="Campaign last 30 days"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"

                    style="?attr/borderlessButtonStyle"
                    android:src="@drawable/ic_right" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>