<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/saved_poi_card"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">
        <FrameLayout
            android:layout_width="150dp"
            android:layout_marginEnd="7dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/saved_image"
                android:scaleType="fitXY"
                android:foregroundGravity="right"
                android:layout_gravity="end"
                android:src="@drawable/ic_launcher_background" />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/saved_like_btn"
                android:foregroundGravity="right"
                android:src="@drawable/ic_heart_selected"
                style="?borderlessButtonStyle"
                android:layout_gravity="end"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="5dp"
                android:id="@+id/saved_name"
                android:text="China town" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nsw"
                android:padding="5dp"
                android:textSize="14sp"
                android:id="@+id/saved_area"
                android:textColor="#898989"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attraction"
                android:padding="10dp"
                android:textColor="#01bcb4"
                android:id="@+id/saved_type"
                android:background="@drawable/textview_border"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>