<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nearby_poi_card"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="7dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/poi_image"
                android:scaleType="fitXY"
                android:foregroundGravity="right"
                android:layout_gravity="end"
                android:src="@drawable/ic_launcher_background" />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/poi_like_btn"
                android:foregroundGravity="right"
                android:src="@drawable/ic_heart_not_selected"
                style="?borderlessButtonStyle"
                android:layout_gravity="end"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="5dp"
                android:id="@+id/poi_name"
                android:text="China town" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nsw"
                android:padding="5dp"
                android:textSize="14sp"
                android:id="@+id/poi_area"
                android:textColor="#898989"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#363636"
                android:padding="5dp"
                android:id="@+id/poi_distance"
                android:text="12 miles from your latlng" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/poi_time"
                    android:textColor="#363636"
                    android:padding="5dp"
                    android:text="2.5 hours total"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#363636"
                    android:text="$40"
                    android:id="@+id/poi_cost"
                    android:padding="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attraction"
                android:padding="10dp"
                android:textColor="#01bcb4"
                android:id="@+id/poi_type"
                android:background="@drawable/textview_border"
                android:textAllCaps="true"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            style="?borderlessButtonStyle"
            android:id="@+id/poi_add_btn"
            android:src="@android:drawable/ic_menu_add"/>
    </LinearLayout>
</android.support.v7.widget.CardView>