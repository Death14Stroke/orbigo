<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.NearbyPoiActivity"
    tools:showIn="@layout/activity_nearby_poi">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/selected_poi_rv"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby places to visit"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/nearby_poi_rv"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan trip"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:id="@+id/plan_trip_btn"
            android:background="@drawable/rounded_border"
            android:textColor="#fff"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
    </FrameLayout>
</LinearLayout>