<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.orbigo.fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/login_emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:ems="10"
            android:fontFamily="@font/galano_grotesque"
            android:hint="@string/emailInput"
            android:inputType="textEmailAddress" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:weightSum="10">

            <EditText
                android:id="@+id/login_passwordET"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:ems="10"
                android:fontFamily="@font/galano_grotesque"
                android:hint="@string/passwordInput"
                android:inputType="textPassword" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:tooltipText="showMyPassword"
                android:clickable="true"
                android:id="@+id/eyeBtn"
                android:src="@drawable/ic_closedeye"
                android:focusable="true" />
        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_radio_group">

            <RadioButton
                android:id="@+id/login_tvt_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/galano_grotesque"
                android:text="Proceed as tourist" />

            <RadioButton
                android:id="@+id/login_bto_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/galano_grotesque"
                android:text="Proceed as business" />
        </RadioGroup>

        <Button
            android:id="@+id/login_login_Btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/galano_grotesque"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/forgotpwdBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/galano_grotesque"
            android:text="@string/forgot_password"
            android:textAllCaps="false"
            android:textColor="@color/aqua_blue"
            android:textSize="12sp" />

        <Button
            android:id="@+id/login_fb_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/border_grey"
            android:fontFamily="@font/galano_grotesque"
            android:paddingStart="10dp"
            android:text="@string/continue_with_facebook1"
            android:textAllCaps="false"
            android:textColor="@color/grey" />

    </LinearLayout>
</FrameLayout>