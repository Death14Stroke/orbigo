<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TouristProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="40"
                android:src="@drawable/ic_person"
                app:civ_border_color="#000"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="User"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/captureImageBtn"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_camera"
                style="?borderlessButtonStyle"/>
            <ImageButton
                android:id="@+id/upload_photo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_gallery"
                style="?attr/borderlessButtonStyle" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:id="@+id/notification"
                style="?attr/borderlessButtonStyle"
                android:src="@drawable/ic_notification"
                android:layout_gravity="end"
                android:foregroundGravity="right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="#b7b7b7"/>
        <Button
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:text="Profile"
            android:id="@+id/profile"
            style="?borderlessButtonStyle"
            android:drawableStart="@drawable/ic_person" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#b7b7b7"/>
        <Button
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:text="Business plus"
            android:id="@+id/business_plus"
            style="?borderlessButtonStyle"
            android:drawableStart="@drawable/ic_b_plus"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#b7b7b7"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:text="Settings"
            android:id="@+id/setting"
            style="?borderlessButtonStyle"
            android:drawableStart="@drawable/ic_setting"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#b7b7b7"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            style="?borderlessButtonStyle"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_switch_t"
            android:text="Switch to tourist"
            android:paddingStart="10dp"
            android:id="@+id/switchToTourist"
            android:paddingEnd="10dp"
            android:textAlignment="textStart" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#b7b7b7"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            style="?borderlessButtonStyle"
            android:textAllCaps="false"
            android:drawableStart="@android:drawable/ic_menu_share"
            android:text="Invite friends"
            android:paddingStart="10dp"
            android:id="@+id/shareOrbiGo"
            android:paddingEnd="10dp"
            android:textAlignment="textStart" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#b7b7b7"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/logout_click"
            style="?borderlessButtonStyle"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_logout"
            android:text="Logout" />
    </LinearLayout>
</ScrollView>